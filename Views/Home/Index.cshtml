@{
    ViewData["Title"] = "Home Page";
}

<header class="masthead text-center text-white d-flex">
    <div class="container my-auto">
        <div class="row">
            <div class="col-lg-10 mx-auto">
                <h1 class="text-uppercase">
                    <strong>Bem Vindo ao Da Vinci Insights</strong>
                </h1>
                <hr>
            </div>
            <div class="col-lg-8 mx-auto">
                <p class="text-faded mb-5">
                    Nossa proposta é um sistema de controle e visualização de feedbacks.
                </p>
                <img src="~/DaVinciLogo.jpg" alt="DaVinci Logo">
            </div>
        </div>
    </div>
</header>

<section class="custom-bg" id="about">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <hr class="light my-4">
                <p class="text-faded mb-4">
                    O Da Vinci Insights é uma plataforma de feedbacks que permite que você controle e visualize os feedbacks de seus clientes de forma fácil e rápida.
                </p>
            </div>
        </div>
    </div>
</section>

<section id="services">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading custom-heading">Nossos Serviços</h2>
                <hr class="my-4">
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-6 text-center">
                <div class="service-box mt-5 mx-auto">
                    <i class="fas fa-4x fa-gem text-primary mb-3 sr-icon"></i>
                    <h3 class="mb-3">Controle de Feedbacks</h3>
                    <p class="text-muted mb-0">Controle os feedbacks de seus clientes de forma fácil e rápida.</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 text-center">
                <div class="service-box mt-5 mx-auto">
                    <i class="fas fa-4x fa-paper-plane text-primary mb-3 sr-icon"></i>
                    <h3 class="mb-3">Visualização de Feedbacks</h3>
                    <p class="text-muted mb-0">Visualize os feedbacks de seus clientes com o apoio de dashboards interativos</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 text-center">
                <div class="service-box mt-5 mx-auto">
                    <i class="fas fa-4x fa-code text-primary mb-3 sr-icon"></i>
                    <h3 class="mb-3">Obtenha insights acionáveis</h3>
                    <p class="text-muted mb-0">Nosso modelo de IA é ideal para sugerir melhorias para o seu produto.</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 text-center">
                <div class="service-box mt-5 mx-auto">
                    <i class="fas fa-4x fa-heart text-primary mb-3 sr-icon"></i>
                    <h3 class="mb-3">Estimule Feedbacks</h3>
                    <p class="text-muted mb-0">Envie incentivos para o cliente avaliar seus produtos.</p>
                </div>
            </div>
        </div>
    </div>
</section>